package WordSearchII;

import java.util.ArrayList;
import java.util.List;

public class wordSearch {
    public static List<String> findWords(char[][] board, String[] words) {
        int i =0;
        boolean found = false;
        List<String> list = new ArrayList<String>();
        while(i<words.length){
            int j=0;
            char match = words[i].charAt(j);
            for(int row=0;row<board.length;row++){
               for(int col =0; col<board[0].length;col++){
                    if(board[row][col]==match){
                        if(findMatch(board,row,col,words[i].charAt(j),i,j,words)){
                            list.add(words[i]);
                            found = true;
                            break;
                        }
                    }       
               
                   if(found)break;
               }
            
                if(found)break;
            }
            i++;
        }
        return list;
    }
	private boolean findMatch(char[][] board,int row,int col,char match,int i,int j,String[] words){
        if(j==words.length)return true;
        if(board[row][col+1]==match){
            findMatch(board,row,col+1,words[i].charAt(j+1),i,j+1,words);
        }else if(board[row][col-1]==match){
            findMatch(board,row,col-1,words[i].charAt(j+1),i,j+1,words);
        }else if(board[row+1][col]==match){
            findMatch(board,row+1,col,words[i].charAt(j+1),i,j+1,words);
        }else if(board[row-1][col]==match){
            findMatch(board,row-1,col,words[i].charAt(j+1),i,j+1,words);
        }
        return false;
    }
    
	
	public static void main(String[] args) {
		char[][] board = new char[][]{{'o','a','a','n'},
		                      {'e','t','a','e'},
		                      {'i','h','k','r'},
		                      {'i','f','l','v'}};

		String words[] = {"oath","pea","eat","rain"};
		findWords(board,words);
	}
	
}