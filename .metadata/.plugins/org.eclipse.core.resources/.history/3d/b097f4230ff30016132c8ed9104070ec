class Node{
		int data;
		Node left, right;
		
		Node(int item){
			this.data = item;
			left = null;
			right = null;
		}
	}

class Tree {
	
	static Node root;
	
	private static int LCA(int l, int r) {
	
		int l_height = height(l,root);
		//int r_height = height(r,root);
		System.out.println(l_height);
		return 0;
	}
	
	private static int height(int r, Node start) {
		if(start==null)return 0;
		if(start.data == r) return 1;
		int l=height(r,start.left);
		int r=height(r,start.right);
		return 1+max(l,r);
	}

	private static int max(int height1, int height2) {
		if(height1>height2)return height1;
		else return height2;
	}

	public static void main(String[] args) {
		Tree tree = new Tree();
		tree.root = new Node(1);
		tree.root.left = new Node(2);
		tree.root.right = new Node(3);
	    tree.root.left.left = new Node(4);
	    tree.root.left.right = new Node(5);
	    tree.root.right.left = new Node(6);
	    tree.root.right.right = new Node(7);
	    
	    System.out.println(LCA(4,5));
	}


	
	
}
